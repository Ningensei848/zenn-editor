{
	"name": "zenn-vscode-extension",
	"displayName": "Markdown Preview Zenn Styling",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"browser": "./lib/web/extension.js",
	"contributes": {
		"markdown.markdownItPlugins": true,
		"markdown.previewStyles": [
			"./lib/web/extension.css"
		],
		"markdown.previewScripts": [
			"./lib/web/preview.js"
		]
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "yarn run compile-web",
		"build": "webpack --mode production --devtool hidden-source-map",
		"vscode:prepublish": "yarn run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"lint": "eslint src --ext ts",
		"lint:strict": "eslint src --ext .ts --max-warnings 0",
		"lint:fix": "eslint src --ext .ts --fix",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/markdown-it": "^12.2.3",
		"@types/mocha": "^9.0.0",
		"@types/vscode": "^1.63.0",
		"@types/webpack-env": "^1.16.2",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-web": "^0.0.15",
		"assert": "^2.0.0",
		"css-loader": "^6.5.1",
		"eslint": "^8.1.0",
		"mini-css-extract-plugin": "^2.4.6",
		"mocha": "^9.1.3",
		"process": "^0.11.10",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.52.1",
		"webpack-cli": "^4.8.0"
	},
	"dependencies": {
		"@ningensei848/markdown-it-zenn": "^0.0.0",
		"crypto-browserify": "^3.12.0",
		"stream-browserify": "^3.0.0",
		"zenn-content-css": "^0.1.101",
		"zenn-embed-elements": "^0.1.101"
	}
}